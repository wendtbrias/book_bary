<div class="w-[80%] mx-auto py-10 mt-2">
    <h2 class="text-xl text-blue-400 font-semibold">Author page</h2>
    <div class="form-component">
        <form method="post" action="/author?_method=POST" class="w-[60%] mt-5 flex items-center justify-between flex-wrap">
            <div class="w-[48%] mb-3">
                <label class="text-blue-300 font-normal text-md mb-2">Name</label>
                <input type="text" name="name" class="w-full py-2 px-3 rounded-md mt-3"/>
            </div>
            <div class="w-[48%] mb-3">
                <label class="text-blue-300 font-normal text-md mb-2">Pen name</label>
                <input type="text" name="penName" class="w-full py-2 px-3 rounded-md mt-3"/>
            </div>
            <div class="w-full text-right mt-7">
                <button class="py-2 px-4 rounded-md bg-orange-400 text-white">Clear</button>
                <button type="submit" class="py-2 px-4 rounded-md bg-blue-400 text-white">Submit</button>
            </div>
        </form>
    </div>
</div>